@model IEnumerable<Travel_MER.Models.Autor>

@{
    ViewData["Title"] = "Index";
}

<h1>Autores</h1>
<br />
<form asp-controller="Autors" asp-action="Index">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text" placeholder="Name" />
        <input type="submit" value="Search" class="btn btn-sm btn-dark" placeholder="Nombre" />
    </p>
</form>

<br />
<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Autor</a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
