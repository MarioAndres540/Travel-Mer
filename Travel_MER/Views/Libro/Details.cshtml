@model Travel_MER.Models.Libro

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del libro</h1>
<br />
<div>
    <h4>Informacion del Libro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2"
            @Html.DisplayNameFor(model => model.EditorialId)>
            Id de la editorial
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EditorialId)
        </dd>
        <dt class = "col-sm-2"
            @Html.DisplayNameFor(model => model.Titulo)>
            Titulo del libro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2"
            @Html.DisplayNameFor(model => model.Sinopsis)>
            Sinopsis del libro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sinopsis)
        </dd>
        <dt class = "col-sm-2"
            @Html.DisplayNameFor(model => model.NPaginas)>
            Numero de paginas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NPaginas)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.Isbn">Editar</a> |
    <a asp-action="Index" class="btn btn-info">Regresar</a>
</div>
