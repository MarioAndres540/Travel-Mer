@model Travel_MER.Models.Libro

@{
    ViewData["Title"] = "Delete";
}

<h1>Elimiar Libro</h1>
<br />

<h3>Realmente quieres eliminar este libro?</h3>
<br />
<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2"
            @Html.DisplayNameFor(model => model.EditorialId)>
            Id de la editorial
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EditorialId)
        </dd>
        <dt class = "col-sm-2"
            @Html.DisplayNameFor(model => model.Titulo)>
            Titulo del libro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2"
            @Html.DisplayNameFor(model => model.Sinopsis)>
            Sinopsis del libro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sinopsis)
        </dd>
        <dt class = "col-sm-2"
            @Html.DisplayNameFor(model => model.NPaginas)>
            Numero de paginas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NPaginas)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Isbn" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Regresar</a>
    </form>
</div>
