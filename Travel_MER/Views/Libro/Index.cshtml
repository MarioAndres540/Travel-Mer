@model IEnumerable<Travel_MER.Models.Libro>

@{
    ViewData["Title"] = "Index";
}

<h1>Libros</h1>
<br />
<form asp-controller="Autors" asp-action="Index">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text" placeholder="Name" />
        <input type="submit" value="Search" class="btn btn-sm btn-dark" placeholder="Nombre" />
    </p>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Libro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EditorialId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sinopsis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NPaginas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EditorialId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sinopsis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NPaginas)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Isbn">Editar</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Isbn">Detalles</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Isbn">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
